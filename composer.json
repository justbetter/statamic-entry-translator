{
    "name": "just-better/statamic-entry-translator",
    "description": "Automaticly translate the content of entries.",
    "require": {
        "statamic/cms": "^5.70",
        "php": "^8.4",
        "laravel/framework": "^12.0",
        "deeplcom/deepl-php": "^1.16"
    },
    "require-dev": {
        "larastan/larastan": "^3.4",
        "laravel/pint": "^1.22",
        "orchestra/testbench": "^10.3",
        "pestphp/pest": "^3.7",
        "phpstan/phpstan-mockery": "^2.0",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "JustBetter\\EntryTranslator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JustBetter\\EntryTranslator\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic entry translator",
            "description": "Automaticly translate the content of entries."
        },
        "laravel": {
            "providers": [
                "JustBetter\\EntryTranslator\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan --memory-limit=1G",
        "style": "pint --test",
        "coverage": "XDEBUG_MODE=coverage php vendor/bin/pest --coverage --min=96",
        "quality": [
            "@test",
            "@analyse",
            "@style"
        ]
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    }
}
